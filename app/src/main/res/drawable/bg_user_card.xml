<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#FFFFFF" /> <!-- Replace with desired background color -->

            <!-- Border -->
            <stroke
                android:width="2dp"
            android:color="#7D7D7D" />  <!-- Border color -->

            <!-- Corner radius -->
            <corners android:radius="8dp" /> <!-- Optional: rounded corners -->
        </shape>
    </item>
</selector>